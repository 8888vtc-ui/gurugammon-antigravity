# GuruGammon Frontend Environment Configuration
# Copy this file to .env.local for local development

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Clerk Authentication (use 'dummy' for mock auth in development)
VITE_CLERK_PUBLISHABLE_KEY=dummy

# Feature Flags
VITE_ENABLE_AI_COACH=true
VITE_ENABLE_TOURNAMENTS=true

